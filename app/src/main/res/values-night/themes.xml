<resources>

    <style name="Theme.Megalo.Night" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="colorAccent">@color/appGreen</item>
        <item name="colorPrimary">@color/appGreen</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:datePickerStyle">@style/MyDatePicker</item>

        <item name="white_black">@color/black</item>
        <item name="black_white">@color/white</item>
        <item name="white_night">@color/night</item>
        <item name="appGreen_black">@color/black</item>
        <item name="appGreen_white">@color/white</item>
        <item name="whiteDisabled_blackDisabled">@color/blackDisabled</item>
        <item name="blackDisabled_whiteDisabled">@color/whiteDisabled</item>
    </style>

    <style name="ShapeAppearanceOverlay" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">@dimen/small_padding</item>
        <item name="boxCornerRadiusBottomStart">@dimen/small_padding</item>
        <item name="boxCornerRadiusTopEnd">@dimen/small_padding</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/small_padding</item>
        <item name="boxBackgroundColor">@color/black</item>
        <item name="boxStrokeColor">@color/text_field_state</item>
        <item name="boxStrokeWidth">@dimen/stroke_size</item>
        <item name="boxStrokeWidthFocused">@dimen/stroke_size</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="errorTextColor">@color/red</item>
        <item name="errorIconDrawable">@null</item>
        <item name="errorTextAppearance">@style/ErrorTextAppearance</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="ErrorTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/normal_text</item>
    </style>

    <style name="MyDatePicker" parent="android:Widget.Material.Light.DatePicker">
        <item name="android:datePickerMode">spinner</item>
        <item name="background">@color/night</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textSize">@dimen/big_text</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:navigationBarColor">@color/night</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/dialog_top_rounded_background</item>
    </style>
</resources>