<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".controller.activity.GalleryActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:paddingStart="@dimen/big_padding"
        android:paddingEnd="@dimen/big_padding" />

    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:layout_marginStart="@dimen/large_padding"
        android:layout_marginTop="@dimen/normal_padding"
        android:layout_marginEnd="@dimen/large_padding"
        android:contentDescription="@string/close_page"
        android:foreground="@drawable/black_ripple_straight"
        android:src="@drawable/white_close" />

    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:layout_marginStart="@dimen/large_padding"
        android:layout_marginTop="@dimen/normal_padding"
        android:layout_marginEnd="@dimen/large_padding"
        android:textColor="@color/white"
        android:textSize="@dimen/normal_text" />

</FrameLayout>