<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/white_black"
    android:padding="@dimen/normal_padding"
    tools:context=".controller.activity.OtpVerification"
    tools:ignore="Overdraw">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/go_back"
        android:src="@drawable/arrow_back" />

    <include
        android:id="@+id/branding_container"
        layout="@layout/content_branding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/branding_container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/large_padding"
        android:text="@string/verify_your_phone_number"
        android:textColor="?attr/black_white"
        android:textSize="@dimen/big_text" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/normal_padding"
        android:gravity="center"
        android:textColor="?attr/blackDisabled_whiteDisabled"
        android:textSize="@dimen/normal_text" />

    <com.chaos.view.PinView
        android:id="@+id/pin_view"
        style="@style/PinWidget.PinView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/large_padding"
        android:cursorVisible="true"
        android:inputType="number"
        android:itemBackground="?attr/white_black"
        android:textColor="?attr/black_white"
        android:textColorHint="?attr/blackDisabled_whiteDisabled"
        android:textSize="@dimen/big_text"
        android:textStyle="bold"
        app:cursorColor="@color/appGreen"
        app:hideLineWhenFilled="false"
        app:itemCount="6"
        app:itemRadius="@dimen/small_padding"
        app:itemSpacing="@dimen/normal_padding"
        app:lineColor="@color/code_text_field_state"
        app:lineWidth="@dimen/stroke_size"
        app:viewType="rectangle" />

    <TextView
        android:id="@+id/error_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pin_view"
        android:layout_marginTop="@dimen/normal_padding"
        android:gravity="center"
        android:textColor="@color/red"
        android:textSize="@dimen/normal_text"
        android:visibility="gone" />

    <TextView
        android:id="@+id/resend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/error_message"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/large_padding"
        android:gravity="center"
        android:textColor="?attr/blackDisabled_whiteDisabled"
        android:textSize="@dimen/normal_text" />
</RelativeLayout>