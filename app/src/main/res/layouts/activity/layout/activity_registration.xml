<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/white_black"
    android:padding="@dimen/normal_padding"
    tools:context=".controller.activity.Registration"
    tools:ignore="Overdraw">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="@string/enter_your_details_below"
                android:textColor="?attr/black_white"
                android:textSize="@dimen/sub_header_text" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header"
                android:layout_marginTop="@dimen/big_padding"
                android:background="@drawable/light_gray_night_solid_curved_corners"
                android:hint="@string/enter_your_full_name"
                android:importantForAutofill="no"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:padding="@dimen/normal_padding"
                android:textColor="?attr/black_white"
                android:textColorHint="?attr/black_white"
                android:textSize="@dimen/big_text"
                tools:ignore="LabelFor" />

            <TextView
                android:id="@+id/name_error_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginTop="@dimen/normal_padding"
                android:gravity="start"
                android:textColor="@color/red"
                android:textSize="@dimen/normal_text"
                android:visibility="gone" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_error_message"
                android:layout_marginTop="@dimen/normal_padding"
                android:background="@drawable/light_gray_night_solid_curved_corners"
                android:hint="@string/enter_your_email"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:padding="@dimen/normal_padding"
                android:textColor="?attr/black_white"
                android:textColorHint="?attr/black_white"
                android:textSize="@dimen/big_text"
                tools:ignore="LabelFor" />

            <TextView
                android:id="@+id/email_error_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email"
                android:layout_marginTop="@dimen/normal_padding"
                android:gravity="start"
                android:textColor="@color/red"
                android:textSize="@dimen/normal_text"
                android:visibility="gone" />

            <EditText
                android:id="@+id/dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_error_message"
                android:layout_marginTop="@dimen/normal_padding"
                android:background="@drawable/light_gray_night_solid_curved_corners"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/select_your_birthdate"
                android:importantForAutofill="no"
                android:inputType="none"
                android:longClickable="false"
                android:maxLines="1"
                android:padding="@dimen/normal_padding"
                android:textColor="?attr/black_white"
                android:textColorHint="?attr/black_white"
                android:textSize="@dimen/big_text"
                tools:ignore="KeyboardInaccessibleWidget,LabelFor" />

            <TextView
                android:id="@+id/dob_error_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dob"
                android:layout_marginTop="@dimen/normal_padding"
                android:gravity="start"
                android:textColor="@color/red"
                android:textSize="@dimen/normal_text"
                android:visibility="gone" />

            <EditText
                android:id="@+id/referral_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dob_error_message"
                android:layout_marginTop="@dimen/normal_padding"
                android:background="@drawable/light_gray_night_solid_curved_corners"
                android:hint="@string/enter_referral_code_optional"
                android:importantForAutofill="no"
                android:inputType="textCapCharacters"
                android:maxLength="6"
                android:maxLines="1"
                android:padding="@dimen/normal_padding"
                android:textColor="?attr/black_white"
                android:textColorHint="?attr/black_white"
                android:textSize="@dimen/big_text"
                tools:ignore="LabelFor" />

            <TextView
                android:id="@+id/referral_code_error_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/referral_code"
                android:layout_marginTop="@dimen/normal_padding"
                android:gravity="start"
                android:textColor="@color/red"
                android:textSize="@dimen/normal_text"
                android:visibility="gone" />

            <FrameLayout
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/referral_code_error_message"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/normal_padding"
                android:background="@drawable/app_green_circle"
                android:foreground="@drawable/white_ripple_circle"
                android:padding="@dimen/small_padding">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/go_back"
                    android:visibility="visible"
                    app:srcCompat="@drawable/arrow_back" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/proceed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/referral_code_error_message"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/normal_padding"
                android:background="@drawable/app_green_circle"
                android:foreground="@drawable/white_ripple_circle"
                android:padding="@dimen/small_padding">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/proceed"
                    android:visibility="visible"
                    app:srcCompat="@drawable/arrow_forward" />

            </FrameLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>