<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/white_black"
    tools:context=".controller.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/onboarding_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/normal_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="?attr/black_white"
            android:textSize="@dimen/title_text"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="@dimen/logo_size"
            android:layout_height="@dimen/logo_size"
            android:contentDescription="@null"
            android:src="@drawable/megalo_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/enormous_padding"
            android:gravity="center"
            android:text="@string/invest_in_real_estate_from_anywhere_anytime_and_with_any_budget"
            android:textColor="?attr/black_white"
            android:textSize="@dimen/sub_header_text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_sheet_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_top_rounded_background"
        android:orientation="vertical"
        android:padding="@dimen/normal_padding"
        app:behavior_hideable="false"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/enter_your_phone_number"
            android:textColor="?attr/black_white"
            android:textSize="@dimen/sub_header_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_padding"
            android:layout_marginBottom="@dimen/normal_padding"
            android:orientation="horizontal">

            <com.hbb20.CountryCodePicker
                android:id="@+id/ccp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/light_gray_solid_curved_corners"
                android:padding="@dimen/small_padding"
                app:ccpDialog_backgroundColor="?attr/white_night"
                app:ccpDialog_keyboardAutoPopup="false"
                app:ccpDialog_textColor="?attr/black_white"
                app:ccp_arrowColor="@color/black"
                app:ccp_autoDetectCountry="true"
                app:ccp_autoDetectLanguage="true"
                app:ccp_contentColor="@color/black"
                app:ccp_countryPreference="NG,CA,DE"
                app:ccp_hintExampleNumber="true"
                app:ccp_textSize="@dimen/big_text" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/normal_padding"
                android:background="@drawable/light_gray_solid_curved_corners"
                android:digits="1234567890"
                android:importantForAutofill="no"
                android:inputType="phone"
                android:maxLines="1"
                android:padding="@dimen/normal_padding"
                android:textSize="@dimen/big_text"
                tools:ignore="LabelFor" />
        </LinearLayout>

        <TextView
            android:id="@+id/error_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/normal_padding"
            android:gravity="center"
            android:textColor="@color/red"
            android:textSize="@dimen/normal_text"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/proceed_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/app_green_circle"
            android:padding="@dimen/small_padding">

            <ImageView
                android:id="@+id/proceed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/proceed"
                android:src="@drawable/arrow_forward"
                android:visibility="visible" />

            <ProgressBar
                android:id="@+id/loader"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_gravity="center"
                android:theme="@style/Theme.Megalo.Onboarding.ProgressBar"
                android:visibility="invisible" />
        </FrameLayout>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>