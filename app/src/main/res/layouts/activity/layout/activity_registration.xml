<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/white_black"
    android:padding="@dimen/normal_padding"
    tools:context=".controller.activity.Registration"
    tools:ignore="Overdraw">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/go_back"
        android:src="@drawable/arrow_back" />

    <include
        android:id="@+id/branding_container"
        layout="@layout/content_branding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/branding_container"
        android:layout_marginTop="@dimen/normal_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_padding"
                android:gravity="start"
                android:text="@string/get_started"
                android:textColor="?attr/black_white"
                android:textSize="@dimen/big_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_padding"
                android:gravity="start"
                android:text="@string/begin_your_journey_to_financial_freedom"
                android:textColor="?attr/darkGrey_lightGrey"
                android:textSize="@dimen/normal_text" />

            <TextView
                android:id="@+id/name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/large_padding"
                android:gravity="start"
                android:text="@string/full_name"
                android:textColor="?attr/black_white"
                android:textSize="@dimen/normal_text" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_padding"
                android:background="@drawable/white_black_solid_dark_grey_light_grey_stroke_curved_corners"
                android:hint="@string/full_name_hint"
                android:importantForAutofill="no"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:paddingStart="@dimen/normal_padding"
                android:paddingTop="@dimen/normal_padding"
                android:paddingEnd="@dimen/normal_padding"
                android:paddingBottom="@dimen/normal_padding"
                android:textColor="?attr/black_white"
                android:textColorHint="?attr/darkHint_lightHint"
                android:textSize="@dimen/normal_text"
                tools:ignore="LabelFor" />

            <TextView
                android:id="@+id/name_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_padding"
                android:gravity="start"
                android:textColor="?attr/darkRed_lightRed"
                android:textSize="@dimen/normal_text"
                android:visibility="gone" />

            <TextView
                android:id="@+id/email_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/large_padding"
                android:gravity="start"
                android:text="@string/email_address"
                android:textColor="?attr/black_white"
                android:textSize="@dimen/normal_text" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_padding"
                android:background="@drawable/white_black_solid_dark_grey_light_grey_stroke_curved_corners"
                android:hint="@string/email_hint"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingStart="@dimen/normal_padding"
                android:paddingTop="@dimen/normal_padding"
                android:paddingEnd="@dimen/normal_padding"
                android:paddingBottom="@dimen/normal_padding"
                android:textColor="?attr/black_white"
                android:textColorHint="?attr/darkHint_lightHint"
                android:textSize="@dimen/normal_text"
                tools:ignore="LabelFor" />

            <TextView
                android:id="@+id/email_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_padding"
                android:gravity="start"
                android:textColor="?attr/darkRed_lightRed"
                android:textSize="@dimen/normal_text"
                android:visibility="gone" />

            <TextView
                android:id="@+id/dob_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/large_padding"
                android:gravity="start"
                android:text="@string/birth_date"
                android:textColor="?attr/black_white"
                android:textSize="@dimen/normal_text" />

            <TextView
                android:id="@+id/dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_padding"
                android:background="@drawable/white_black_solid_dark_grey_light_grey_stroke_curved_corners"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="start"
                android:maxLines="1"
                android:padding="@dimen/normal_padding"
                android:text="@string/select_your_birth_date"
                android:textColor="?attr/darkHint_lightHint"
                android:textSize="@dimen/normal_text" />

            <TextView
                android:id="@+id/dob_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_padding"
                android:gravity="start"
                android:textColor="?attr/darkRed_lightRed"
                android:textSize="@dimen/normal_text"
                android:visibility="gone" />

            <TextView
                android:id="@+id/referral_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/large_padding"
                android:gravity="start"
                android:text="@string/referral_code"
                android:textColor="?attr/black_white"
                android:textSize="@dimen/normal_text" />

            <EditText
                android:id="@+id/referral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_padding"
                android:background="@drawable/white_black_solid_dark_grey_light_grey_stroke_curved_corners"
                android:hint="@string/optional"
                android:importantForAutofill="no"
                android:inputType="textCapCharacters"
                android:maxLength="6"
                android:maxLines="1"
                android:paddingStart="@dimen/normal_padding"
                android:paddingTop="@dimen/normal_padding"
                android:paddingEnd="@dimen/normal_padding"
                android:paddingBottom="@dimen/normal_padding"
                android:textColor="?attr/black_white"
                android:textColorHint="?attr/darkHint_lightHint"
                android:textSize="@dimen/normal_text"
                tools:ignore="LabelFor" />

            <TextView
                android:id="@+id/referral_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_padding"
                android:gravity="start"
                android:textColor="?attr/darkRed_lightRed"
                android:textSize="@dimen/normal_text"
                android:visibility="gone" />

            <include
                layout="@layout/content_general_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/large_padding" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>