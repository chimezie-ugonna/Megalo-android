<resources>

    <style name="Theme.Megalo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="colorAccent">@color/appGreen</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="white_black">@color/white</item>
        <item name="black_white">@color/black</item>
        <item name="white_night">@color/white</item>
    </style>

    <style name="Theme.Megalo.Onboarding.ProgressBar" parent="Theme.Megalo">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorAccent">@color/appGreen</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/dialog_rounded_background</item>
    </style>
</resources>