<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.activity.Home">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_nav" />

    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/home"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bottom_navigation_item_background"
            android:foreground="@drawable/app_green_ripple_straight"
            android:padding="@dimen/normal_padding">

            <ImageView
                android:id="@+id/home_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/home"
                android:src="@drawable/home" />

            <TextView
                android:id="@+id/home_dot"
                android:layout_width="@dimen/normal_padding"
                android:layout_height="@dimen/normal_padding"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/normal_padding"
                android:layout_marginBottom="@dimen/normal_padding"
                android:background="@drawable/notification_dot"
                android:visibility="gone" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/investments"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bottom_navigation_item_background_disabled"
            android:foreground="@drawable/app_green_ripple_straight"
            android:padding="@dimen/normal_padding">

            <ImageView
                android:id="@+id/investments_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/investments"
                android:src="@drawable/investments_disabled" />

            <TextView
                android:id="@+id/investments_dot"
                android:layout_width="@dimen/normal_padding"
                android:layout_height="@dimen/normal_padding"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/normal_padding"
                android:layout_marginBottom="@dimen/normal_padding"
                android:background="@drawable/notification_dot_disabled"
                android:visibility="gone" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/profile"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bottom_navigation_item_background_disabled"
            android:foreground="@drawable/app_green_ripple_straight"
            android:padding="@dimen/normal_padding">

            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/profile"
                android:src="@drawable/profile_disabled" />

            <TextView
                android:id="@+id/profile_dot"
                android:layout_width="@dimen/normal_padding"
                android:layout_height="@dimen/normal_padding"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/normal_padding"
                android:layout_marginBottom="@dimen/normal_padding"
                android:background="@drawable/notification_dot_disabled"
                android:visibility="gone" />
        </FrameLayout>

    </LinearLayout>

</RelativeLayout>