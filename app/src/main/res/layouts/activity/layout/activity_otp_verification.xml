<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/white_black"
    android:padding="@dimen/normal_padding"
    tools:context=".controller.activity.OtpVerification">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="?attr/black_white"
        android:textSize="@dimen/sub_header_text" />

    <LinearLayout
        android:id="@+id/code_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_marginTop="@dimen/big_padding"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/e1"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/light_gray_solid_curved_corners"
            android:gravity="center"
            android:importantForAutofill="no"
            android:inputType="number"
            android:longClickable="false"
            android:maxLength="1"
            android:maxLines="1"
            android:padding="@dimen/normal_padding"
            android:textSize="@dimen/big_text"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/e2"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_padding"
            android:layout_weight="1"
            android:background="@drawable/light_gray_solid_curved_corners"
            android:gravity="center"
            android:importantForAutofill="no"
            android:inputType="number"
            android:longClickable="false"
            android:maxLength="1"
            android:maxLines="1"
            android:padding="@dimen/normal_padding"
            android:textSize="@dimen/big_text"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/e3"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_padding"
            android:layout_weight="1"
            android:background="@drawable/light_gray_solid_curved_corners"
            android:gravity="center"
            android:importantForAutofill="no"
            android:inputType="number"
            android:longClickable="false"
            android:maxLength="1"
            android:maxLines="1"
            android:padding="@dimen/normal_padding"
            android:textSize="@dimen/big_text"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/e4"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_padding"
            android:layout_weight="1"
            android:background="@drawable/light_gray_solid_curved_corners"
            android:gravity="center"
            android:importantForAutofill="no"
            android:inputType="number"
            android:longClickable="false"
            android:maxLength="1"
            android:maxLines="1"
            android:padding="@dimen/normal_padding"
            android:textSize="@dimen/big_text"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/e5"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_padding"
            android:layout_weight="1"
            android:background="@drawable/light_gray_solid_curved_corners"
            android:gravity="center"
            android:importantForAutofill="no"
            android:inputType="number"
            android:longClickable="false"
            android:maxLength="1"
            android:maxLines="1"
            android:padding="@dimen/normal_padding"
            android:textSize="@dimen/big_text"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/e6"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_padding"
            android:layout_weight="1"
            android:background="@drawable/light_gray_solid_curved_corners"
            android:gravity="center"
            android:importantForAutofill="no"
            android:inputType="number"
            android:longClickable="false"
            android:maxLength="1"
            android:maxLines="1"
            android:padding="@dimen/normal_padding"
            android:textSize="@dimen/big_text"
            tools:ignore="LabelFor" />

    </LinearLayout>

    <TextView
        android:id="@+id/error_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/code_parent"
        android:layout_marginTop="@dimen/normal_padding"
        android:gravity="center"
        android:textColor="@color/red"
        android:textSize="@dimen/normal_text"
        android:visibility="gone" />

    <TextView
        android:id="@+id/resend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/error_message"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/big_padding"
        android:gravity="center"
        android:textColor="@color/darkGray"
        android:textSize="@dimen/big_text" />

    <FrameLayout
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/app_green_circle"
        android:padding="@dimen/small_padding">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/go_back"
            android:src="@drawable/arrow_back"
            android:visibility="visible" />
    </FrameLayout>
</RelativeLayout>